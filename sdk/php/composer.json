{
    "name": "workersql/php-sdk",
    "description": "PHP SDK for WorkerSQL - MySQL at the edge on Cloudflare",
    "type": "library",
    "keywords": ["mysql", "database", "edge", "cloudflare", "sql", "workersql"],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "HealthFees Organization",
            "email": "developers@healthfees.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "WorkerSQL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WorkerSQL\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=max",
        "cs:check": "phpcs --standard=PSR12 src tests",
        "cs:fix": "phpcbf --standard=PSR12 src tests"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
